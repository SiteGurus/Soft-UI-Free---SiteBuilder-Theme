{%-raw-%}

{% assign modulo = forloop.index | modulo: 2 %}
{% assign penultimate_item = _per_page | minus: 2 %}

<div class="d-flex col-12 col-lg-6 p-0 border-bottom {% if modulo == 1 %}border-end-lg{% endif %}">
  <div class="flex-fill d-flex flex-column align-items-center justify-content-center gap-4 px-4 py-6">
    <div class="text-sm text-center text-dark">{{this['Quote'] | html_safe }}</div>
    <div class="d-flex gap-2">
      <img src="{{ this['Image'] | asset_url }}"
      class="rounded-circle"
      style="object-fit: cover; width: 32px; height: 32px;" 
      alt="profile picture"
      >
      <div class="d-flex flex-column">
        <div class="text-sm text-dark">{{this['name']}}</div>
        {% if this['Job Title'] != blank %}
          <div class="text-xs text-muted">
            {{this['Job Title']}} {% if this['Company Name'] != blank %} at {{this['Company Name']}} {% endif %}
          </div>
        {% endif %}
      </div>
    </div>
  </div>
</div>

{%-endraw-%}