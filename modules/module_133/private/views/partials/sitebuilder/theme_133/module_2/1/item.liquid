{% raw %}
{%- if this['is_parent'] -%}
  <li class="nav-item dropdown dropdown-hover mx-2">
    <a class="nav-link text-white dropdown-toggle ps-2 d-flex justify-content-between cursor-pointer align-items-center" href="#" id="navbarDropdown_{{level}}_{{sitebuilder_uniq_component_id}}" role="button" data-bs-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
      {{this['link_name']}}
    </a>
    <ul class="dropdown-menu mb-0 mb-lg-" aria-labelledby="navbarDropdown_{{level}}_{{sitebuilder_uniq_component_id}}">
			{%- assign _next_level = _level | plus: 1 -%}
			{%- include 'modules/siteglide_menu/get/get_items', level: _next_level, parent_id: this['forced_id'], item_layout: 'item' -%}
		</ul>
  </li>
{%- else -%}
  <li class="{% if level > 1 %}dropdown-item{% else %}nav-item mx-2{% endif %}">
    <a class="nav-link text-white {% if level > 1 %}text-lg-dark{% endif %} ps-2 d-flex justify-content-between cursor-pointer align-items-center" href="{{this['link_url']}}" title="{{this['link_name']}}"><span>{{this['link_name']}}</span></a>
  </li>
{%- endif -%}
{% endraw %}