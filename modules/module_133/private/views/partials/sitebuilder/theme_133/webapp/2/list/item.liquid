{% raw %}
<div class="col-lg-4 col-md-6">
  <div class="card card-pricing">
    <div {% if field_map['Image'] != blank %}class="card-header text-center pt-4 pb-5 position-relative" style="background-image: url('{{field_map['Image'] | asset_url}}'); background-size: cover;"{% else %}class="card-header bg-gradient-dark text-center pt-4 pb-5 position-relative"{% endif %}>
      <div class="z-index-1 position-relative">
        <h5 class="text-white">{{this['name']}}</h5>
        <h1 class="text-white mt-2 mb-0">
          <small>{{field_map['Currency']}}</small>{{field_map['Value']}}</h1>
        <h6 class="text-white">{{field_map['Duration']}}</h6>
      </div>
    </div>
    <div class="position-relative mt-n5" style="height: 50px;">
      <div class="position-absolute w-100">
          <svg class="waves waves-sm" xmlns="http://www.w3.org/2000/svg" xmlns:xlink="http://www.w3.org/1999/xlink" viewBox="0 24 150 40" preserveAspectRatio="none" shape-rendering="auto">
            <defs>
              <path id="card-wave" d="M-160 44c30 0 58-18 88-18s 58 18 88 18 58-18 88-18 58 18 88 18 v44h-352z"></path>
            </defs>
            <g class="moving-waves">
              <use xlink:href="#card-wave" x="48" y="-1" fill="rgba(255,255,255,0.30"></use>
              <use xlink:href="#card-wave" x="48" y="3" fill="rgba(255,255,255,0.35)"></use>
              <use xlink:href="#card-wave" x="48" y="5" fill="rgba(255,255,255,0.25)"></use>
              <use xlink:href="#card-wave" x="48" y="8" fill="rgba(255,255,255,0.20)"></use>
              <use xlink:href="#card-wave" x="48" y="13" fill="rgba(255,255,255,0.15)"></use>
              <use xlink:href="#card-wave" x="48" y="16" fill="rgba(255,255,255,0.99)"></use>
            </g>
          </svg>
        </div>
    </div>
    <div class="card-body text-center">
      <ul class="list-unstyled max-width-200 mx-auto">
        {% if field_map['Feature 1 Description'] != blank %}
          <li>
            {% if field_map['Feature 1 Value'] != blank %}
              <b>{{field_map['Feature 1 Value']}}</b>
            {% endif %}
            {{field_map['Feature 1 Description']}}
            <hr class="horizontal dark">
          </li>
        {% endif %}
        {% if field_map['Feature 2 Description'] != blank %}
          <li>
            {% if field_map['Feature 2 Value'] != blank %}
              <b>{{field_map['Feature 2 Value']}}</b>
            {% endif %}
            {{field_map['Feature 2 Description']}}
            <hr class="horizontal dark">
          </li>
        {% endif %}
        {% if field_map['Feature 3 Description'] != blank %}
          <li>
            {% if field_map['Feature 3 Value'] != blank %}
              <b>{{field_map['Feature 3 Value']}}</b>
            {% endif %}
            {{field_map['Feature 3 Description']}}
            <hr class="horizontal dark">
          </li>
        {% endif %}
        {% if field_map['Feature 4 Description'] != blank %}
          <li>
            {% if field_map['Feature 4 Value'] != blank %}
              <b>{{field_map['Feature 4 Value']}}</b>
            {% endif %}
            {{field_map['Feature 4 Description']}}
            <hr class="horizontal dark">
          </li>
        {% endif %}
      </ul>
      {% if field_map['Button Text'] != blank %}
        <a href="{{field_map['Button URL'] | default: '#'}}" class="btn bg-gradient-dark w-100 mt-4 mb-0" title="{{field_map['Button Title']}}">
          {{field_map['Button Text']}}
        </a>
      {% endif %}
    </div>
  </div>
</div>
{% endraw %}