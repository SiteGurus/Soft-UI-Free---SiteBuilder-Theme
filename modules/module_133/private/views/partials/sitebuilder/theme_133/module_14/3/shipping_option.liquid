{% raw %}
<div class="form-group text-center text-md-start">
	<label for="{{sitebuilder_uniq_component_id}}-shipping-options" class="mb-3">Shipping Options</label>
	<select onchange="s_e_cart_shipping(this);" name="{{sitebuilder_uniq_component_id}}-shipping-options" id="{{sitebuilder_uniq_component_id}}-shipping-options" class="form-control">
		<option selected value="">--Please select--</option>
		{%- for this in shipping_options -%}
			{% assign currency = this.price.properties["module_field_14/price_2"] %}
			<option {% if this.id == current_cart_shipping_id %}selected{% endif %} value="{{this.id}}">{{this.name}} - {{this.currency_symbol}}{{this.price}} </option>
		{%- endfor -%}
	</select>
</div>
{% endraw %}