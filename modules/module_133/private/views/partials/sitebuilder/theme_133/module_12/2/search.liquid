{%-raw-%}

<div class="mb-4">
  <h4 class="text-lg text-dark mb-2">Keyword Search</h4>
  <form action="{{events_list_page_url}}"> 
  <label for="default-search" class="mb-2 text-sm text-dark visually-hidden">Search</label>
    <div class="position-relative">
      <div class="d-flex position-absolute top-0 bottom-0 start-0 align-items-center ps-3">
        <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" fill="currentColor" class="bi bi-search" viewBox="0 0 16 16">
          <path d="M11.742 10.344a6.5 6.5 0 1 0-1.397 1.398h-.001q.044.06.098.115l3.85 3.85a1 1 0 0 0 1.415-1.414l-3.85-3.85a1 1 0 0 0-.115-.1zM12 6.5a5.5 5.5 0 1 1-11 0 5.5 5.5 0 0 1 11 0"/>
        </svg>
      </div>
      <input name="keyword" type="search" id="default-search" class="d-block p-2 ps-5 w-100 text-dark rounded border" placeholder="Search for Events">
      <div class="d-flex position-absolute top-0 bottom-0 end-0 align-items-center pe-3">
        <button type="submit" class="btn btn-primary btn-sm mb-0">Search</button>
      </div>
    </div>
  </form>
</div>

{%-endraw-%}