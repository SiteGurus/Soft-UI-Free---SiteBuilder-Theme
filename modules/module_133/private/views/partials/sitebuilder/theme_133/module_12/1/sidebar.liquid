{%- raw -%}

<aside aria-label="Sidebar">
  <form data-sg-live-update-controls="sidebar">
    <div class="overflow-y-auto bg-light rounded mb-4">
      <div class="mb-4">
        <h4 class="text-lg mb-2">Categories</h4>
        <div>
          {% for category in context.exports.categories.data %}
            {% if category[1].parent == event_parent_category or event_parent_category == blank %}
              <div class="d-inline-flex align-items-center text-xs mb-2 py-1 px-2 rounded bg-secondary">
                <input id="category_{{category[0]}}" type="checkbox" name="category" value="{{category[0]}}" class="rounded" {% if filters_values_from_URL == true %}{% assign params_category = context.params.category | split: "," %}{% if params_category contains category[0] %}checked{% endif %}{% endif %}>
                <label for="category_{{category[0]}}" class="m-0 ms-2 text-xs fw-bolder text-white text-uppercase">{{category[1].name | replace: " ", "&nbsp;"}}</label>
              </div>
            {% endif %}
          {% endfor %}
        </div>
      </div>
      {% capture archive_layout %}{{layout}}{% endcapture %}
      {%- include 'modules/siteglide_events/get/get_events_archive', archive_layout: archive_layout, archive_layout_type: "archive" -%}

      {% capture search %}layouts/modules/module_12/{{layout}}/search{% endcapture %}
      {%- include search -%}
    </div>
  </form>
</aside>
  
{%- endraw -%}